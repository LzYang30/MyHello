<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.edu.taruc.myhello.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textViewMessage" />

    <Button
        android:text="@string/click_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonClickMe"
        android:onClick="showMessage" />

    <Button
        android:text="@string/back_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/buttonBack"
        android:onClick="backMessage"
        android:layout_below="@+id/buttonClickMe"
        android:layout_alignLeft="@+id/buttonClickMe"
        android:layout_alignStart="@+id/buttonClickMe" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unsad"
        android:layout_marginBottom="38dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/buttonClickMe"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBack"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_alignStart="@+id/buttonBack"
        android:layout_marginTop="40dp"
        android:id="@+id/buttonHide"
        android:onClick="hidePicture" />
</RelativeLayout>
